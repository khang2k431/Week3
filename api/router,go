package api

import (
	"github.com/gorilla/mux"
	"net/http"
)

func SetupRouter() *mux.Router {
	r := mux.NewRouter()

	// WebSocket endpoint
	r.HandleFunc("/ws", HandleWebSocket)

	// Healthcheck
	r.HandleFunc("/ping", func(w http.ResponseWriter, r *http.Request) {
		w.Write([]byte("pong"))
	})

	return r
}
